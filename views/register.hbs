<div id="register-form">

    <h1 style="text-align: center;">Register</h1>
    <form action="/dashboard" method="post">

        <label for="email"></label>
        <input id="email" name="email" autocomplete="email" type="email" tabindex="2" placeholder="Email" required /><br><br>

        <label for="firstname"></label>
        <input id="firstname" name="firstname" autocomplete="name" type="text" tabindex="1" placeholder="First Name" required /><br><br>

        <label for="lastname"></label>
        <input id="lastname" name="lastname" autocomplete="name" type="text" tabindex="1" placeholder="Last Name" required /><br><br>

        <label for="psw"></label>
        <input id="psw" name="psw" type="password" tabindex="2" placeholder="Password" minlength="6" maxlength="12" required /><br><br>

        <div class="bday">
            <label for="birthday">Birthday</label><br><br>
           <small>To sign up, you need to be at least 18. Other people who use Vacalion won't see your birthday.</a>.</small><br><br>
            <div class="in1">
            <input list="months" name="mon" id="mon" placeholder="Month" required>
            <datalist id="months">
                <option value="Jan">
                <option value="Feb">
                <option value="Mar">
                <option value="Apr">
            </datalist>
        </div><br>
        <div class="in2">
            <input list="days" name="day" id="day" placeholder="Day" required>
            <datalist id="days">
                <option value="01">
                <option value="02">
                <option value="03">
                <option value="04">
            </datalist>
            </div><br>
            <div class="in3">
            <input list="years" name="year" id="year" placeholder="Year" required>
            <datalist id="years">
                <option value="1990">
                <option value="1991">
                <option value="1992">
                <option value="1993">
            </datalist>
            </div><br>
            <br><br>
        </div>
        <hr>

        <small>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</small><br><br>

        <div class="buttons">
            <input type="submit" name="Submit" value="Register" tabindex="7" />
            <input type="reset" name="Reset" value="Reset" tabindex="8" />
        
        <br><br>
        <input id="Button1" type="button" value="Login" onclick="switchVisible();"/>
    </div>
    </form>
</div>



<div id="login-form">
    <h1 style="text-align: center;">Login</h1>
    <form action="/dashboard" method="post">

        <label for="email"></label>
        <input id="email" name="email" autocomplete="email" type="email" tabindex="1" placeholder="Mail Address" required /><br><br>

        <label for="psw"></label>
        <input id="psw" name="psw" type="password" tabindex="2" placeholder="Password" minlength="6" maxlength="12" required /><br><br>

        <div class="buttons">
            <input type="submit" name="Submit" value="Login" tabindex="7" />
            <input type="reset" name="Reset" value="Reset" tabindex="8" />
        
        <br><br>
        <input id="Button1" type="button" value="Create an account" onclick="switchVisible();"/>
    </div>
    </form>
